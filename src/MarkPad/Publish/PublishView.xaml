<Window x:Class="MarkPad.Publish.PublishView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blog settings" Height="240" Width="364" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10,10,10,0">
    	<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Web address of your blog" VerticalAlignment="Top"/>
        <TextBox Name="BlogUrl" HorizontalAlignment="Left" Width="331" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Opacity="0.5"><Run Language="en-au" Text="This should be the Metaweblog endpoint"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" Margin="0,20,0,0"/>
		<TextBox Name="Username" HorizontalAlignment="Left" Width="217.863" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Margin="0,8,0,0"/>
        <PasswordBox Name="Password" HorizontalAlignment="Left" Width="217.863" />
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
        	<Button x:Name="Continue" Click="ContinueClick" Content="Continue" Width="100"/>
        	<Button x:Name="Cancel" Click="CancelClick" Content="Cancel" IsCancel="True" Width="100" Margin="20,0,0,0"/>		
        </StackPanel>		
    </StackPanel>
</Window>
